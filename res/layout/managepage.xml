<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serviceBox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wat_bg" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/title_manage"
        android:textColor="#00b595"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_above="@+id/buttservice"
        android:gravity="center_horizontal" >
                
        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/no_notes"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spacertext"
        android:layout_margin="26dp"
        android:onClick="serviceClick"
        android:textSize="16sp"
        android:text="" />
    
    <TextView 
        android:id="@+id/spacertext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="" />
    
</RelativeLayout>