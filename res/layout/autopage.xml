<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/autobox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wat_bg" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#00b595"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollbox4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:layout_above="@+id/GPSgo" >

        <RelativeLayout
            android:id="@+id/scrollchild1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/instruct1"
                style="@style/InstructFont"
                android:text="@string/instruct1" />

            <TextView
                android:id="@+id/instruct3"
                style="@style/InstructFont"
                android:layout_below="@id/instruct1"
                android:paddingTop="10dp"
                android:text="@string/instruct3" />

            <TextView
                android:id="@+id/instruct4"
                style="@style/InstructFont"
                android:layout_below="@id/instruct3"
                android:paddingTop="10dp"
                android:text="@string/instruct4" />
            
            <TextView
                android:id="@+id/instruct8"
                style="@style/InstructFont"
                android:layout_below="@id/instruct4"
                android:paddingTop="10dp"
                android:text="@string/instruct8" />
            
            <TextView
                android:id="@+id/instruct6"
                style="@style/InstructFont"
                android:layout_below="@id/instruct8"
                android:paddingTop="10dp"
                android:text="@string/instruct6" />
            
            <TextView
                android:id="@+id/instruct7"
                style="@style/InstructFont"
                android:layout_below="@id/instruct6"
                android:paddingTop="10dp"
                android:text="@string/instruct7" />
        
        </RelativeLayout>
    
    </ScrollView>

    <Button
        android:id="@+id/GPSgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instruct4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spacertext2"
        android:layout_margin="26dp"
        android:onClick="locateMe"
        android:text="@string/button_auto" />

    <TextView
        android:id="@+id/spacertext2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="" />

</RelativeLayout>